<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".information_activity"
        tools:ignore="ScrollViewSize">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars[10]"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:padding="5dp"
            android:text="name"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/subject_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="subject"
            app:layout_constraintEnd_toEndOf="@+id/name_textView"
            app:layout_constraintStart_toStartOf="@+id/name_textView"
            app:layout_constraintTop_toBottomOf="@+id/name_textView"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/time_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="time"
            app:layout_constraintEnd_toEndOf="@+id/subject_textView"
            app:layout_constraintStart_toStartOf="@+id/subject_textView"
            app:layout_constraintTop_toBottomOf="@+id/language_textView" />

        <TextView
            android:id="@+id/Year_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="year"
            app:layout_constraintEnd_toEndOf="@+id/time_textView"
            app:layout_constraintStart_toStartOf="@+id/time_textView"
            app:layout_constraintTop_toBottomOf="@+id/time_textView" />

        <TextView
            android:id="@+id/Director_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="director"
            app:layout_constraintEnd_toEndOf="@+id/Year_textView"
            app:layout_constraintStart_toStartOf="@+id/Year_textView"
            app:layout_constraintTop_toBottomOf="@+id/Year_textView" />

        <TextView
            android:id="@+id/Actors_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="actors"
            app:layout_constraintEnd_toEndOf="@+id/Director_textView"
            app:layout_constraintStart_toStartOf="@+id/Director_textView"
            app:layout_constraintTop_toBottomOf="@+id/Director_textView"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/description_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="description"
            app:layout_constraintEnd_toEndOf="@+id/Actors_textView"
            app:layout_constraintStart_toStartOf="@+id/Actors_textView"
            app:layout_constraintTop_toBottomOf="@+id/Actors_textView"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/download_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="108dp"
            android:text="Download"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@+id/onlineMovieButton"
            app:layout_constraintTop_toBottomOf="@+id/description_textView"
            app:layout_constraintVertical_bias="0.41000003"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/onlineMovieButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="Online"
            app:layout_constraintEnd_toStartOf="@+id/download_button"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/download_button"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/language_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="language"
            app:layout_constraintEnd_toEndOf="@+id/subject_textView"
            app:layout_constraintStart_toStartOf="@+id/subject_textView"
            app:layout_constraintTop_toBottomOf="@+id/subject_textView"
            tools:ignore="HardcodedText,MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>